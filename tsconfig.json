{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@": ["resources/js/Pages"]
    },
    "types": ["node"]
  },
  "include": ["resources/js/**/*"],
  "exclude": ["resources/js/*.js"]
}
